{% extends 'base.html.twig' %}

{% block title %}Articles home!{% endblock %}

{% block body %}
{{form_start(form)}}
    <div class="container-fluid">
        <h1 style="margin-top: 2%">Mes articles</h1>
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Publique</th>
            </tr>
            </thead>
            <tbody>
            {% for article in form.articles %}
            <tr>
                <td>{{ form_widget(article.titre) }}</td>
                <td>{{ form_widget(article.content) }}</td>
                <td>
                    {{ form_widget(article.publier) }}
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ form_widget(form.save) }}
    </div>
{{ form_end(form) }}
{% endblock %}

